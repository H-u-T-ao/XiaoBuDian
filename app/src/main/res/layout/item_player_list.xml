<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_item_selector"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/tv_player_list_music_info"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginStart="36dp"
        android:layout_toStartOf="@id/tv_player_list_duration"
        android:singleLine="true"
        android:text="歌曲信息"
        android:textColor="@color/app_black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_player_list_duration"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="18dp"
        android:layout_toStartOf="@id/tv_player_list_delete"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@color/app_black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_player_list_delete"
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="36dp"
        android:gravity="center"
        android:text="移除"
        android:textColor="@color/app_red"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_player_list_white"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_below="@id/tv_player_list_music_info" />

    <TextView
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:layout_alignBottom="@id/tv_player_list_white"
        android:layout_centerHorizontal="true"
        android:background="@color/app_gray" />

</RelativeLayout>